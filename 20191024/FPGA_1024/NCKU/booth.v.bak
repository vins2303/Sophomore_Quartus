`timescale 1ns / 10ps
module booth(out, in1, in2);
//000011010
//11101101
parameter width = 6;

input  	[width-1:0] in1;   //multiplicand
input  	[width-1:0] in2;   //multiplier
output reg [2*width-1:0] out; //product

reg A;
reg [width-1:0]data1, data2;
integer i;
always@(in1,in2)begin
    data1 = 0;
    data2 = in2;
    A = 0;
    for(i = 0 ;i<width;i=i+1)begin
        case({data2,A})
            2'b01: data1 = data1 + in1;
            2'b10: data1 = data1 - in1;
            default: data1 = data1;
        endcase
        
        {data1,data2,A} = {data1,data2,A}>>1;
        data1 = 6'111111;
    end
    out = {data1,data2};
end

endmodule
